<h2>New Book</h2>
<%= form_with model:@book, local:true do |f| %>
  <div class = "field">
    <label>title</label>
    <%= f.text_field :title %>
  </div>
  <div class = "field">
    <label>body</label>
    <%= f.text_area :body %>
  </div>
  <div class = "actions">
  <%= f.submit "Create Book" %>
  </div>
<% end %>